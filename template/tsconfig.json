{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
        "src/*": ["src/*"],
        "@assets/*": ["src/client/assets/images/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
